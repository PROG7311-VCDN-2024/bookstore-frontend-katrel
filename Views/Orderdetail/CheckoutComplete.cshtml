 @model sprint_books.Models.Orderdetail

<h1>Thank you  for your order</h1>

<h5 class="mt-5">Order Id: @Model.OrderId</h5>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            var itemTotal = item.Book.Price * item.OrderQuantity;
            <tr>
                <td>
                    <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.OrderId"><img src="@item.Book.ImageUrl" style="height: 4em"></a>
                </td>
                <td>
                    <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.OrderId">@item.Book.Title</a>
                </td>
                <td>
                    @itemTotal
                </td>
                <td>
                    @item.OrderQuantity
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    <td></td>
    <td class="text-right">
        <strong>Total:</strong>
    </td>
    <td>
        <strong>@Model?.OrderTotal</strong>
    </td>
    <td></td>
    </tfoot>
</table>

